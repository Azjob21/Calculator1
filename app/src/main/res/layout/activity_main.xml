<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ACBE3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#333A73"
        android:gravity="right"
        android:paddingTop="10pt"
        android:paddingRight="10pt"
        android:paddingBottom="5pt"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#333A73">


        <TableRow
            android:layout_width="608dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:onClick="buClear"
                android:text="AC"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="+/-"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="buOperation"
                android:text="%"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="122dp"
                android:layout_height="80dp"
                android:insetRight="5dp"
                android:onClick="buOperation"
                android:text="/"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="7"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="8"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="9"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bumul"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:insetRight="5dp"
                android:onClick="buOperation"
                android:text="*"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="4"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="5"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="6"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/buminus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:insetRight="5dp"
                android:onClick="buOperation"
                android:text="-"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="1"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="2"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/bu15"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:insetRight="5dp"
                android:onClick="BuNumEvent"
                android:text="3"
                android:textSize="20sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/buplus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:insetRight="5dp"
                android:onClick="buOperation"
                android:text="+"
                android:textColor="#FF000000"
                android:textSize="20sp"
                app:cornerRadius="5dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#333A73"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu17"

            android:layout_width="16dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:insetLeft="5dp"
            android:insetRight="5dp"
            android:onClick="BuNumEvent"
            android:text="0"
            android:textSize="20sp"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/bu18"
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:insetRight="5dp"
            android:onClick="BuNumEvent"
            android:text="."
            android:textSize="20sp"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/bu19"
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:insetRight="5dp"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="#FF000000"
            android:textSize="20sp"
            app:cornerRadius="5dp" />

    </LinearLayout>

</LinearLayout>